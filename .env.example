# Email Configuration
GOOGLE_USER_EMAIL=your-gmail@gmail.com
GOOGLE_APP_PASSWORD=your-app-password # Gmail app password (generate after enabling 2FA)

# Groq Configuration
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=openai/gpt-oss-20b
GROQ_TIMEOUT_MS=20000

# Firebase Configuration
# Use NEXT_PUBLIC_* variants so Firebase client can read them in the browser
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id

# API Security
NEWSLETTER_JOB_TOKEN=your-shared-secret-token

# reCAPTCHA (v3)
# Register at https://www.google.com/recaptcha/admin to get keys.
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
RECAPTCHA_MIN_SCORE=0.5